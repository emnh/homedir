##### FUNCTIONS #####

function getaudiolength {
    ffprobe -v error -show_entries format=duration -of default=noprint_wrappers=1:nokey=1 "$1"
}

function secondsToHoursMinutesAndSeconds {
    python -c 's=int(input());print("{:02}:{:02}:{:02}".format(s // 3600, (s // 60) % 60, s % 60))'
}

function getavlength {
    total_length=0
    for file in "$@"; do
        length=$(getaudiolength "$file")
        if [ -n "$length" ]; then
            int_length=$(echo -n $length | cut -f1 -d.)
            total_length=$(($total_length + $int_length))
            formatted=$(echo $intlength | secondsToHoursMinutesAndSeconds)
            size=$(stat -c %s "$file")
            kbps=$(python -c "print(round($size / $length / 1024))")
            echo $file: $length $formatted "$kbps"kBps
        else
            echo $file: error
        fi
    done
    echo $total_length | secondsToHoursMinutesAndSeconds
}

function psc {
    pids="$(pgrep $1)"
    if [ -n "$pids" ]; then
        echo $pids | xargs ps
    fi
}

function getmem {
    # For example: getmem chrome
    smem -t -k -c pss -P $1 | tail -n 1
}

